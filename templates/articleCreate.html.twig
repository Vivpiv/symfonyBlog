{%  extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    {% for article in articles %}
        <h2>{{ article.title }} <small>{{ article.category.name }}</small></h2>
        <p>{{ article.content }}</p>


    {% endfor %}

{% endblock %}